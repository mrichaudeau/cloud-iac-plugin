{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "scripts/validate-bash-command.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "scripts/post-edit-validation.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "tf-generator",
        "hooks": [
          {
            "type": "command",
            "command": "scripts/post-generation-check.sh"
          }
        ]
      }
    ]
  }
}
